{
  "version": 3,
  "configurePresets": [
    {
      "name": "vulkan-debug",
      "displayName": "Vulkan (Debug)",
      "description": "Builds with Vulkan backend for debugging",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/vulkan-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "NEKI_BUILD_VULKAN": "ON",
        "NEKI_BUILD_D3D12": "OFF"
      }
    },

    {
      "name": "d3d12-debug",
      "displayName": "D3D12 (Debug)",
      "description": "Builds with D3D12 backend for debugging",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/d3d12-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "NEKI_BUILD_VULKAN": "OFF",
        "NEKI_BUILD_D3D12": "ON"
      }
    },

    {
      "name": "vulkan-release",
      "displayName": "Vulkan (Release)",
      "description": "Builds with Vulkan backend for release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/vulkan-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "NEKI_BUILD_VULKAN": "ON",
        "NEKI_BUILD_D3D12": "OFF"
      }
    },

    {
      "name": "d3d12-release",
      "displayName": "D3D12 (Release)",
      "description": "Builds with D3D12 backend for release",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/d3d12-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "NEKI_BUILD_VULKAN": "OFF",
        "NEKI_BUILD_D3D12": "ON"
      }
    }
  ]
}